{
    "name": "halcyon-rest-api",
    "private": true,
    "engines": {
        "node": ">=8.0.0"
    },
    "scripts": {
        "start": "concurrently npm:watch npm:serve",
        "build": "tsc",
        "watch": "tsc -w",
        "serve": "nodemon --inspect dist/server.js",
        "lint": "tslint -c tslint.json -p tsconfig.json",
        "format": "prettier --write \"**/*.{ts,tsx,json,scss,md,yml,html}\""
    },
    "dependencies": {
        "async-middleware": "1.2.1",
        "bcryptjs": "2.4.3",
        "body-parser": "1.18.3",
        "cors": "2.8.5",
        "dotenv": "6.2.0",
        "express": "4.16.4",
        "husky": "1.3.1",
        "joi": "14.3.1",
        "jsonwebtoken": "8.4.0",
        "lint-staged": "8.1.3",
        "mongoose": "5.4.11",
        "morgan": "1.9.1",
        "node-fetch": "2.3.0",
        "nodemailer": "5.1.1",
        "speakeasy": "2.0.0",
        "swagger-ui-express": "4.0.2",
        "uuid": "3.3.2"
    },
    "devDependencies": {
        "@types/bcryptjs": "2.4.2",
        "@types/cors": "2.8.4",
        "@types/express": "4.16.1",
        "@types/joi": "14.3.1",
        "@types/jsonwebtoken": "8.3.0",
        "@types/mongoose": "5.3.15",
        "@types/morgan": "1.7.35",
        "@types/node-fetch": "2.1.6",
        "@types/nodemailer": "4.6.5",
        "@types/speakeasy": "2.0.3",
        "@types/swagger-ui-express": "3.0.0",
        "@types/uuid": "3.4.4",
        "concurrently": "4.1.0",
        "nodemon": "1.18.10",
        "prettier": "1.16.4",
        "tslint": "5.12.1",
        "tslint-config-prettier": "1.18.0",
        "typescript": "3.3.3"
    },
    "lint-staged": {
        "**/*.{ts,tsx,json,scss,md,yml,html}": [
            "prettier --write",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
